{% extends 'base.html.twig' %}
{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Image</th>
                  <td>
                    {% if user.image != '' %}
                     <img alt="User pic" style="width:150px;" src="{{ asset('backtemp/img/')}}{{ user.image }}" /> {% endif %}
                  </td>
            </tr>
            {% if is_granted('ROLE_COLLABORATEUR')  %}
            <tr>
                <th>presence</th>
                <td>{{ user.presence }}</td>
            </tr>
            <tr>
                <th>hours worked</th>
                <td>{{ user.nbrhworked }}</td>
            </tr>
            <tr>
                <th>Remuneration total</th>
                <td>{{ user.remunerationtotal }}</td>
            </tr>
            {% endif %}

        </tbody>
    </table>
 {% if is_granted('ROLE_ADMIN')  %}

